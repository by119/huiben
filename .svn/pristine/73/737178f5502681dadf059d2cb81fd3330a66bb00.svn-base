var app = getApp()
const Trequest = require('../../static/js/request.js')
Page({
  data: {
    currentTab: 0,
    regardData: [],
    regardData2: [],
    regardData3: [],
    pageUrl: '/pages/video/video'
  },
  onShow: function() {
    var userInfo = wx.getStorageSync('user_info').data;
    if (!userInfo) {
      wx.redirectTo({
        url: "/pages/login/login?pageAs=lately"
      });
      return false;
    }
  },
  onLoad: function(options) {
    var that = this;
    // 视
    Trequest({
      url: 'user_visit_log/getlist',
      data: {
        subject_id: 2
      },
      callback(res) {
        // console.log(res);
        that.setData({
          regardData: res.data.data
        })
      }
    });
    // 听
    Trequest({
      url: 'user_visit_log/getlist',
      data: {
        subject_id: 3
      },
      callback(res) {
        // console.log(res);
        that.setData({
          regardData2: res.data.data
        })
      }
    });
    // 读
    Trequest({
      url: 'user_visit_log/getlist',
      data: {
        subject_id: 4
      },
      callback(res) {
        // console.log(res);
        that.setData({
          regardData3: res.data.data
        })
      }
    });
  },
  //滑动切换
  swiperTab: function(e) {
    var that = this;
    that.setData({
      currentTab: e.detail.current
    });
  },
  //点击切换
  clickTab: function(e) {
    var that = this;
    if (this.data.currentTab === e.target.dataset.current) {
      return false;
    } else {
      that.setData({
        currentTab: e.target.dataset.current
      })
    }
  }
})