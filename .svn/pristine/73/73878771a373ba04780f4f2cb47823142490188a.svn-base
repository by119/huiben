/* pages/picturebook/picturebook.wxss */

.picturebook {
}

swiper {
  height: 100vh;
}

.slide-image {
  width: 100%;
  height: 450rpx;
}

/* 故事文字  */

.rook-content {
  height: calc(100vh - (450rpx + 120rpx));
  margin: 0;
  background-color: #fff;
}

/* 底部控制区域  */

.foot-ctrl {
  position: fixed;
  bottom: 0;
  z-index: 15;
  width: 100%;
  height: 120rpx;
  box-shadow: 0 -5rpx 5rpx #e3e3e3;
  overflow: visible;
  background-color: #fff;
}

/*  圆弧  */

.circular {
  position: absolute;
  bottom: -5rpx;
  left: 50%;
  transform: translate(-50%);
  text-align: center;
  color: #fff;
  box-shadow: 0 -5rpx 5rpx #e3e3e3;
  border-radius: 50%;
  padding: 40rpx;
  background-color: #fff;
}

.book-state {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 50%;
  background-color: #e64731;
  font-size: 60rpx;
  text-align: center;
}

.page-num {
  position: absolute;
  top: -100rpx;
  right: 20rpx;
  padding: 5rpx 20rpx;
  min-width: 80rpx;
  color: #e64731;
  border: 2rpx solid #e64731;
  border-radius: 30rpx;
  text-align: center;
  font-size: 30rpx;
  background-color: #fff;
}

.changepage {
  position: absolute;
  line-height: 120rpx;
  font-size: 32rpx;
  color: #e64731;
}

.prev {
  left: 50rpx;
}

.next {
  right: 50rpx;
}

.grey {
  color: #8a8a8a;
}

.icon-prev, .icon-next {
  font-size: 40rpx;
  margin: 20rpx;
}
