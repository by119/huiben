icon {
    vertical-align:baseline; 
}

.container {
  width: 750rpx;
  background-color: #fff;
  padding: 0; 
  margin: 0; 
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.whole {
  width: 690rpx;
  padding: 0 30rpx;
  background-color: #fff;
  margin-top: 10rpx;
}


.nav-hover {
  color: red;
}


/*  标题列表  */
.tools {
  padding: 20rpx;
  margin-top: 20rpx;
}
.tool {
  height: 90rpx;
  border: 2rpx solid #f6f6f6;
  box-shadow: 0 0 15rpx #838383;
  margin-bottom: 20rpx;
  line-height: 90rpx;
  color: #6b6b6b;
  font-size: 30rpx;
   padding: 0 20rpx; 
}

 .tool icon {
  margin: 0 15rpx 0 0;  
  font-size: 42rpx;
  color: #e64731;
}

.tool-more {
  float: right;
  color: #b7b7b7!important;
  font-size: 32rpx!important;
}


/* 清除浮动  */
.clearfix::after,.clearfix::before{
  content:"";
  height:0;
  line-height:0;
  display:block;
  clear:both;
  visibilty: hidden;
}

.clearfix{
  zoom:1;
}

/* 隐藏滚动条  */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}