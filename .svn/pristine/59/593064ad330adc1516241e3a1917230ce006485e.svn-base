.dynamic {
}

.swiper-tab {
  width: 100%;
  height: 10vh;
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  background-color: #e64731;
}

.swiper-tab-item {
  flex: 1;
  color: #fff;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #e64731;
}

.active {
  color: #fff;
  border-bottom: 4rpx solid #fff;
}

.dynamic-content {
  height: 90vh;
}

swiper {
  text-align: center;
  border-radius: 15rpx;
  height: 100%;
}

.news {
  height: 100%;
  margin: -8vh 0;
}

.news-head {
  height: 8vh;
  background-color: #e64731;
}

.del-lesson {
  color: #9b9b9b;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
}
