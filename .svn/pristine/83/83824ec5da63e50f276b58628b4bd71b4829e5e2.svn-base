.lately {
}

.swiper-tab {
  width: 100%;
  height: 10vh;
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  background-color: #e64731;
}

.swiper-tab-item {
  flex: 1;
  width: 30%;
  color: #fff;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #e64731;
}

.active {
  color: #fff;
  border-bottom: 4rpx solid #fff;
}

.lately-content {
  height: 100vh;
}

.regard-head {
  height: 8vh;
  background-color: #e64731;
}

.regard {
  height: 100%;
  margin: -9vh 0 0 0;
}

.del-lesson {
  color: #9b9b9b;
  font-size: 32rpx;
  text-align: center;
  line-height: 100rpx;
}

.del-lesson icon {
  font-size: 38rpx;
  margin-right: 10rpx;
}


