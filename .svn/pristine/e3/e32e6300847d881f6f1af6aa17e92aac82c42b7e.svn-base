/* 遮罩层  */

.mask {
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

.mask image {
  width: 80%;
  position: fixed;
  bottom: 20%;
  left: 50%;
  transform: translate(-50%);
}

.mask icon {
  position: fixed;
  bottom: 10%;
  left: 50%;
  transform: translate(-50%);
  font-size: 40rpx;
}

/* 音乐播放 */

.music-ctrl {
  position: fixed;
  bottom: 2vh;
  left: 50%;
  transform: translate(-50%);
  width: 95%;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 15rpx;
  padding: 5rpx;
}

.icon-off {
  color: #fff;
  font-size: 40rpx;
  margin: 0 20rpx;
}

.poster {
  vertical-align: middle;
  width: 90rpx;
  border-radius: 50%;
}

.play-info {
  display: inline-block;
  padding: 0 20rpx;
  line-height: 30rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  color: #fff;
}

.play-name, .play-author {
  font-size: 26rpx;
  margin-right: 20rpx;
}

.play-time {
  font-size: 24rpx;
}

progress {
  width: 200rpx;
  float: right;
  margin: 20rpx;
}

.music-state {
  color: #fff;
  font-size: 48rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
}
