.suggest {
  background-color: #f5f5f5;
  padding: 0;
  margin: 0;
}

.nav {
  width: 750rpx;
  background-color: #fff;
  padding: 0 0 30rpx;
}

.section-box {
  background-color: #fff;
  padding: 0 30rpx;
}

.section {
  margin: 20rpx auto 0;
  width: 640rpx;
  height: 60rpx;
  border-radius: 30rpx;
  padding: 0 30rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25%;
  z-index: 2;
  width: 20px;
  height: 20px;
}

.section input {
  float: left;
  width: 540rpx;
  background-color: #fafafa;
  text-align: center;
  border-radius: 30rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
}

.suggest-swiper {
  height: 100vh;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  background-color: #fff;
  font-size: 30rpx;
}

.swiper-tab scroll-view {
   white-space: nowrap; 
}

.swiper-tab-item {
  /* width: 100rpx; */
  padding: 0 0 0 30rpx;
  color: #333;
  display: inline-block;
  text-align: center;
}

.active {
  color: #f65959;
  border-bottom: 4rpx solid #f65959;
}

.broadcast {
  width: 90%;
  margin: 0 auto;
  height: 390rpx !important;
  padding-top: 20rpx;
}

.broadcast image {
  width: 100%;
  border-radius: 15rpx;
  overflow: hidden;
}

.nav-list {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 690rpx;
  padding: 0 30rpx;
}

.nav-list navigator {
  width: 117rpx;
  margin: 0 10rpx;
  float: left;  
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

.nav-list navigator image {
  width: 100%;
  height: 80rpx;
  background-color: pink;
  border-radius: 50%;
}

.nav-list-hover {
  color: red;
}

.whole-title {
  color: #333;
  font-size: 40rpx;
  line-height: 80rpx;
  vertical-align: bottom;
  margin: 0 10rpx 0 0;
}

.whole-title icon {
  color: #c40701;
  font-size: 50rpx;
}

.whole-more {
  float: right;
  color: #b7b7b7;
  font-size: 32rpx !important;
}

