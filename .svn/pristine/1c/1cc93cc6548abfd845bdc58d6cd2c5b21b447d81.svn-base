var app = getApp();
const Trequest = require('../../static/js/request.js');


Page({
  data: {
    vipList: [],
    images: [],
    currentTab: 0,
    userInfo: {},
    level: 0,
    vipBuy: {
      pcl_id: null,
      month: '',
      price: 0,
      cost: 0,
      codeAmount:0
    },
    myCoupon: '不使用',
    couponList: [],
    modelBg: 'none',
    couponY: '0'
  },
  onShow: function() {
    var userInfo = wx.getStorageSync('user_info').data;
    if (!userInfo) {
      wx.redirectTo({
        url: "/pages/login/login?pageAs=mine-vip"
      });
      return false;
    }
    this.setData({
      userInfo: userInfo
    })
  },
  onLoad: function(options) {
    var that = this;
    that.setData({
      userInfo: wx.getStorageSync('user_info').data
    })
    if (that.data.userInfo.userVip) {
      that.setData({
        level: that.data.userInfo.userVip.level || 0
      })
    } else {
      that.setData({
        level: 0
      })
    }
    // 用户vip
    Trequest({
      url: 'user_vip_level/getlist',
      data: {},
      callback(res) {
        let data = res.data,
          arr = [];
        for (let i in data) {
          arr.push(data[i]);
        }
        that.setData({
          vipList: arr,
          vipBuy: arr[that.data.level]
        })
      }
    });
  },
  swiperTab: function(e) {
    var current = e.detail.current,
      that = this;
    this.setData({
      currentTab: current,
      vipBuy: that.data.vipList[current],
      'vipBuy.pcl_id': null,
      myCoupon: '不使用'
    });

  },
  // 优惠券 选择
  choseCoupon: function() {
    var that = this;
    Trequest({
      url: 'promo_code_log/getlist',
      data: {
        status: 0,
        price: that.data.vipBuy.price
      },
      callback(res) {
        if (res.data.data) {
          that.setData({
            couponList: res.data.data,
          })
          this.setData({
            modelBg: 'block',
            couponY: '-650rpx'
          })
        }else {
          wx.showToast({
            title: '暂无可用优惠券',
            icon:'none'
          })
        }
      }
    });
  },
  // 优惠券选择框关闭
  closeCoupon: function() {
    this.setData({
      modelBg: 'none',
      couponY: '0%'
    })
  },
  // 不使用优惠券
  withoutCoupon: function() {
    this.setData({
      'vipBuy.pcl_id': null,
      myCoupon: '不使用',
      modelBg: 'none',
      couponY: '0%'
    })
  },
  useCoupon: function(e) {
    var id = e.currentTarget.dataset.id,
      discount = e.currentTarget.dataset.discount,
      amount = e.currentTarget.dataset.amount,
      man = e.currentTarget.dataset.man,
      msg = e.currentTarget.dataset.msg,
      str = '',
      codeAmount = 0;
    if (discount > 0) {
      str = discount + '折' + msg;
      codeAmount = this.data.vipBuy.price * discount;
    } else {
      str = '满' + man + '减' + amount + msg;
      codeAmount = this.data.vipBuy.price - amount;
    }
    console.log(codeAmount,'codeAmount')
    this.setData({
      'vipBuy.pcl_id': id,
      myCoupon: str,
      codeAmount: codeAmount
    })
    this.closeCoupon();
  },
  vipBuyFn: function(e) {
    var userInfo = wx.getStorageSync('user_info').data;
    if (!userInfo) {
      wx.redirectTo({
        url: "/pages/login/login?pageAs=mine-vip"
      });
      return false;
    }
    let level = e.currentTarget.dataset.level,
      pcl_id = this.data.vipBuy.pcl_id,
      that = this;
    var addData = {};
    if (pcl_id) {
      addData = {
        id: 1,
        pcl_id: pcl_id,
        type: 4,
        level: level,
        promo_code_amount: that.data.codeAmount
      }
    } else {
      addData = {
        id: 1,
        type: 4,
        level: level,
        promo_code_amount: that.data.codeAmount
      }
    }

    // user_vip_log/add  level  id = 1  type =4
    // 用户购买vip
    wx.showLoading({
      title: "",
      mask: !0
    }), Trequest({
      url: 'user_vip_log/add',
      data: addData,
      callback(data) {
        setTimeout(function () {
          wx.hideLoading();
        }, 100);
        wx.requestPayment({
          timeStamp: data.data.data.timeStamp,
          nonceStr: data.data.data.nonceStr,
          package: data.data.data.package,
          signType: 'MD5',
          paySign: data.data.data.paySign,
          success: function (res) {
            var _user_info = wx.getStorageSync('user_info');
            if (_user_info.data.userVip) {
              _user_info.data.userVip.level = level;
            } else {
              _user_info.data.userVip = {
                level: level
              };
            }
            wx.setStorageSync('user_info', _user_info);
            that.setData({
              userInfo: wx.getStorageSync('user_info').data
            })
            wx.showToast({
              title: '支付成功！',
              icon: 'success',
              duration: 5000
            })
          },
          fail: function (res) {
            wx.showToast({
              title: '支付失败！',
              icon: 'none',
              duration: 2000
            })
          }
        })

      }
    });



    // Trequest({
    //   url: 'user_vip_log/add',
    //   data: addData,
    //   callback(data) {
    //     wx.requestPayment({
    //       timeStamp: data.data.data.timeStamp,
    //       nonceStr: data.data.data.nonceStr,
    //       package: data.data.data.package,
    //       signType: 'MD5',
    //       paySign: data.data.data.paySign,
    //       success: function(res) {
    //         var _user_info = wx.getStorageSync('user_info');
    //         if (_user_info.data.userVip) {
    //           _user_info.data.userVip.level = level;
    //         } else {
    //           _user_info.data.userVip = {
    //             level: level
    //           };
    //         }
    //         wx.setStorageSync('user_info', _user_info);
    //         that.setData({
    //           userInfo: wx.getStorageSync('user_info').data
    //         })
    //         wx.showToast({
    //           title: '支付成功！',
    //           icon: 'success',
    //           duration: 5000
    //         })
    //       },
    //       fail: function(res) {
    //         wx.showToast({
    //           title: '支付失败！',
    //           icon: 'none',
    //           duration: 2000
    //         })
    //       }
    //     })

    //   }
    // });
  },
  imageLoad: function(e) {
    var $width = e.detail.width, //获取图片真实宽度
      $height = e.detail.height,
      ratio = $width / $height; //图片的真实宽高比例
    var viewWidth = 190, //设置图片显示宽度
      viewHeight = 190 / ratio; //计算的高度值
    var viewWidth2 = 220, //设置图片显示宽度
      viewHeight2 = 220 / ratio; //计算的高度值
    var image = this.data.images;
    //将图片的datadata-index作为image对象的key,然后存储图片的宽高值
    image[e.target.dataset.index] = {
      width: viewWidth,
      height: viewHeight,
      width2: viewWidth2,
      height2: viewHeight2
    }
    this.setData({
      images: image
    })
  }
})