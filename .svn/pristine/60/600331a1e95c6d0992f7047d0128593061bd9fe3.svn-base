icon {
    vertical-align:baseline; 
}

.container {
  width: 750rpx;
  background-color: #fff;
  padding: 0; 
  margin: 0; 
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.whole {
  width: 690rpx;
  padding: 0 30rpx;
  background-color: #fff;
  margin-top: 10rpx;
}


.nav-hover {
  color: red;
}


/*  标题列表  */
.tools {
  padding: 20rpx;
  margin-top: 20rpx;
}
.tool {
  height: 90rpx;
  border: 2rpx solid #f6f6f6;
  box-shadow: 0 0 15rpx #f6f6f6;
  margin-bottom: 20rpx;
  line-height: 90rpx;
  color: #6b6b6b;
  font-size: 30rpx;
  padding: 0 20rpx; 
}

 .tool icon {
  margin: 0 15rpx 0 0;  
  font-size: 42rpx;
  color: #e64731;
}

.tool-more {
  float: right;
  color: #b7b7b7!important;
  font-size: 32rpx!important;
}

/* 我的  */

.flex-row {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    flex-direction: row;
}

.flex-grow-0 {
    min-width: 0;
    -webkit-box-flex: 0;
    -ms-flex-positive: 0;
    flex-grow: 0;
    -ms-flex-negative: 0;
    flex-shrink: 0;
}

.flex-grow-1 {
    min-width: 0;
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
    -ms-flex-negative: 1;
    flex-shrink: 1;
}

.flex-x-center {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
}

.flex-y-center {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -ms-grid-row-align: center;
    align-items: center;
}

.flex-y-bottom {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: end;
    -ms-flex-align: end;
    -ms-grid-row-align: flex-end;
    align-items: flex-end;
}
/* 小标题 */
.whole-title {
  color: #333;
  font-size: 34rpx;
  line-height: 80rpx;
  vertical-align: bottom;
}

.whole-title icon {
  color: #c40701;
  font-size: 48rpx;
}

.whole-more {
  float: right;
  color: #b7b7b7;
  font-size: 30rpx !important;
}

/* nav广告列表 */
.nav-list {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 690rpx;
  padding: 0 30rpx;
}

.nav-list navigator {
  width: 117rpx;
  margin: 0 10rpx;
  float: left;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

.nav-list navigator image {
  width: 100%;
  height: 80rpx;
  /* border-radius: 50%; */
}

.nav-list .navigator-hover {
  /* background-color: #e64731; */
}

.nav-list-hover {
  color: #e64731;
}

/* 清除浮动  */
.clearfix::after,.clearfix::before{
  content:"";
  height:0;
  line-height:0;
  display:block;
  clear:both;
  visibilty: hidden;
}

.clearfix{
  zoom:1;
}

/* 隐藏滚动条  */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}


/* 上拉加载更多  */

.has-more {
  padding-bottom: 15rpx;
}

.has-more view {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
}

.has-more text {
  color: #999;
  font-size: 32rpx;
}

/* 返回顶部 */

.goTop {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 130rpx;
  font-size: 60rpx;
  color: #f7f7f7;
  background-color: rgba(0, 0, 0, 0.4);
  right: 30rpx;
  border-radius: 50%;
}