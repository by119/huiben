/* pages/search/search.wxss */

.search {
  padding: 30rpx;
}

.section {
  width: 100%;
  position: relative;
  font-size: 30rpx;
}

.searchcion {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 23%;
  z-index: 2;
}

.section input {
  float: left;
  width: 540rpx;
   background-color: #fafafa;
  text-align: center;
  border-radius: 31rpx;
  padding: 0 30rpx;
  height: 62rpx;
  line-height: 62rpx;
}

.section text {
  line-height: 62rpx;
  color: #9b9b9b;
  float: right;
}

/* 搜索历史  */

.search-history {
}

.search-title {
  margin: 50rpx 0 30rpx;
}

.search-title text {
  font-size: 40rpx;
}

.search-title icon {
  float: right;
  color: #9b9b9b;
}

.search-list {
  float: left;
  margin: 12rpx;
  padding: 0 40rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  font-size: 32rpx;
  line-height: 60rpx;
  color: #333;
}

.search-list:hover {
  color: red;
}

/* 没有记录  */

.null {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}
